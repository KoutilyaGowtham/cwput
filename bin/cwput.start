#!/usr/bin/env bash
source /etc/profile

if [[ "$OSTYPE" =~ darwin ]]; then
    source ~root/.cwput_profile
    timeout_cmd=`which gtimeout`
else
    timeout_cmd=`which timeout`
fi

while [ 1 ]
do
  (HOME=/root $timeout_cmd 120 /usr/bin/cwput.bash) &
  if [ -n "$CWPUT_DISABLE_DETAILED" ]; then
    sleep 300
  else
    sleep 60
  fi
done
